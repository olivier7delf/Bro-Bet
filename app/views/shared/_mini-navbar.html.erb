      <div class="tabs active">
        <%= link_to bets_path do %>
          <i class="fas fa-handshake text-center"></i>
        <% end %>
      </div>
      <div class="tabs">
        <%= link_to user_path(current_user) do %>
          <i class="fas fa-user text-center"></i>
        <% end %>
      </div>
      <div class="tabs">
        <%= link_to tournaments_path do %>
