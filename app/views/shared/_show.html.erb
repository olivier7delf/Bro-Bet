<div class="bet-infos">
  <h4><%= @bet.title %></h4>
    <%= render 'shared/show_result_input' %>
    <%= render 'shared/show_resulted' %>
    <%= render 'shared/show_result_pending' %>
    <% if Bet::PROGRESS[@progress.to_sym] < 2 %>
      <p>
        Participant: <%= @bet.in_users.map { |u| u.nickname }.join(', ') %>
      </p>
    <% end %>
  <p><%= @bet.description %></p>
  <p>Créateur : <%= @bet.user.nickname %></p>
  <p>Mise : <%= @bet.stake %></p>
  <p>Date de cloture : <%= @bet.closed_at.strftime("%d/%m/%Y à %kh%M") %></p>
  <p>Date de résultat : <%= @bet.resulted_at.strftime("%d/%m/%Y à %kh%M") %></p>
</div>
