<%= render "shared/mini-navbar" %>
<h2 class="text-center">Tableau de Bord</h2>
<div class="d-flex flex-column align-items-center my-3">
  <% if current_user.photo.attached? %>
   <%= cl_image_tag current_user.photo.key, class: "avatar avatar-profil mb-2" %>
  <% else %>
    <img class="avatar avatar-profil mb-2" src="https://res.cloudinary.com/dv1x9ot6j/image/upload/v1599121283/logo_n5ubcv.png" alt="logo">
  <% end %>
  <span><strong>Niveau</strong> : <%= @level %></span>
</div>

<div class="card-user">
  <div class="card-user-infos">
    <span><i class="fas fa-crown"></i><strong>Victoires</strong> : <%= @bets_winned %> (<%= @ratio_victory %> % )</span><br>
    <span><i class="fas fa-poop"></i><strong>Celui que tu bats le plus</strong> : <br><%= @poop_bro %> (<%= @poop_bro_bets %>)</span><br>
    <span><i class="fas fa-gem"></i><strong>Celui qui te bat le plus</strong> : <br><%= @golden_bro %> (<%= @golden_bro_bets %>)</span><br>
    <span><i class="fas fa-user-friends"></i><strong>Celui avec qui tu joues le plus</strong> : <br><%= @bro4life %> (<%= @bro4life_bets %>)</span><br>

    <span><h5 class="mt-2"><strong>Tes paris :</strong></h5>
      <ul>
        <li><strong>- Total</strong> : <%= @bets_played %></li>
        <li><strong>- Finis</strong> : <%= @bets_finished %></li>
        <li><strong>- Créés</strong> : <%= @bets_created %></li>
      </ul>
    </span>
  </div>
</div>

<div class="d-flex flex-column infos-user">
  <div class="btn-new-bet">
    <%= link_to 'Crée un nouveau pari !', new_my_bet_path %>
  </div>
</div>

