<div class="bet-infos">
  <h4><%= @tournament.title %></h4>
  <div>
    <% current_user.in_bets %>
  </div>
  <p><%= @tournament.description %></p>
  <p>Créateur : <%= @tournament.user.nickname %></p>
  <p>Mise : <%= @tournament.stake %></p>
  <p>Date de cloture : <%= @tournament.closed_at.strftime("%d/%m/%Y à %kh%M") %></p>
  <p>Date de résultat : <%= @tournament.resulted_at.strftime("%d/%m/%Y à %kh%M") %></p>
</div>
